{{#> page title='Contact - Instincts Training'}}
  {{> header}}

  <section class="bg-instincts-grey relative">
    <div class="max-w-screen-xl mx-auto px-8 py-32 grid grid-cols-12 gap-8">
      <div class="text-gray-50 col-span-5 space-y-16">
        <div class="flex flex-col gap-6">
          <h1 class="text-6xl font-semibold">
            Contact us
          </h1>
          <div class="text-2xl">
            We offer a range of courses covering a variety of topics, all of which can be tailored to better suit your
            needs
          </div>
        </div>
      </div>
    </div>
    <img class="object-cover absolute right-0 top-0 h-full" style="width: calc(50% + 5.5rem);"
      src="/img/boxing-training.png">
  </section>

  <section class="bg-stone-100 text-instincts-grey">
    <div class="max-w-screen-xl mx-auto px-8 py-32 grid grid-cols-12 gap-8 items-center">
      <div class="col-span-4 col-start-2 space-y-8">
        <div class="space-y-4">
          <div>
            <div class="flex items-center gap-2">
              <svg class="w-6 h-6 fill-instincts-grey">
                <use xlink:href="/img/icons.svg#phone"></use>
              </svg>
              <span class="text-2xl font-semibold">Phone</span>
            </div>
            <a href="#" class="text-lg">01234 56789</a>
          </div>
          <div>
            <div class="flex items-center gap-2">
              <svg class="w-6 h-6 fill-instincts-grey">
                <use xlink:href="/img/icons.svg#email"></use>
              </svg>
              <span class="text-2xl font-semibold">Email</span>
            </div>
            <a href="#" class="text-lg">enquiries@insinctstraining.com</a>
          </div>
        </div>
        <ul class="flex gap-8 fill-instincts-grey">
          <li>
            <a href="#">
              <svg class="w-6 h-6">
                <use xlink:href="/img/icons.svg#facebook"></use>
              </svg>
            </a>
          </li>
          <li>
            <a href="#">
              <svg class="w-6 h-6">
                <use xlink:href="/img/icons.svg#messenger"></use>
              </svg>
            </a>
          </li>
          <li>
            <a href="#">
              <svg class="w-6 h-6">
                <use xlink:href="/img/icons.svg#instagram"></use>
              </svg>
            </a>
          </li>
          <li>
            <a href="#">
              <svg class="w-6 h-6">
                <use xlink:href="/img/icons.svg#twitter"></use>
              </svg>
            </a>
          </li>
          <li>
            <a href="#">
              <svg class="w-6 h-6">
                <use xlink:href="/img/icons.svg#linkedin"></use>
              </svg>
            </a>
          </li>
        </ul>
      </div>
      <img class="col-span-6 object-cover" src="/img/course.jpg">
    </div>
  </section>

  {{> footer}}
{{/page}}
