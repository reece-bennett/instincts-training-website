<div class="space-y-6 border-b border-neutral-400 py-4 md:p-4 lg:p-8">
  <h3>
    <button class="w-full flex items-center justify-between gap-4 group" id="accordion-header-{{index}}"
      aria-expanded="false" aria-controls="accordion-panel-{{index}}" data-module="accordion">
      <span class="text-2xl font-semibold text-left">{{title}}</span>
      <span class="w-10 h-10 shrink-0 relative border border-neutral-600 rounded-full">
        <span class="absolute bg-neutral-600 left-1/2 top-1/4 bottom-1/4 w-px -translate-x-1/2 transition-all
                     group-aria-expanded:rotate-90"></span>
        <span class="absolute bg-neutral-600 top-1/2 left-1/4 right-1/4 h-px -translate-y-1/2"></span>
      </span>
    </button>
  </h3>
  <div class="space-y-4" id="accordion-panel-{{index}}" aria-labelledby="accordion-header-{{index}}" hidden>
    {{> @partial-block}}
  </div>
</div>
